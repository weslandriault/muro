<h2 class="heading">Search</h2>

<%= form_tag search_path, :controller => 'welcome', :action => 'search_results', :id=>"search_form", method: :get do  %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag 'Search' %>
<% end %>

<section id="search_results">
  <%= render 'search_results' %>
</section>